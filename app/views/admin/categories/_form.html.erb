<%= form_with(model: [:admin, @category], local: true) do |form|  %>
    <% if category.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(category.errors.count, "error")%> prohibited this user from being saved</h2>
            <ul>
                <% category.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div class="field">
        <%= form.label :isactive, 'Active' %>
        <%= form.label :is_active, 'Hiện', :value => true %>
        <%= form.radio_button :is_active, true, :checked => true  %>
        <%= form.label :is_active, 'Ẩn', :value => false %>
        <%= form.radio_button :is_active, false  %>
    </div>

    <div class="actions">
        <%= form.submit %>
    </div>

<% end %>